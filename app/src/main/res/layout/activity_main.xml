<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingTop="50dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BROADCAST"
            android:onClick="nextactivity"
            android:gravity="center"
            android:textColor="#000"
            android:layout_gravity="center"
            android:padding="1dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_marginRight="10dp"
            android:drawableTop="@drawable/ic_broadcast"
            android:drawablePadding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LOCATE"
            android:onClick="btnLocation"
            android:gravity="center"
            android:textColor="#000"
            android:layout_gravity="center"
            android:padding="1dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_map"
            android:drawablePadding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SET ROUTE"
            android:onClick="btn3"
            android:textColor="#000"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="1dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:drawableTop="@drawable/ic_add_fire"
            android:drawablePadding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FIREBASE to spinner"
            android:onClick="btn4"
            android:textColor="#000"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="1dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_display_route"
            android:drawablePadding="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile"
            android:onClick="btn5"
            android:textColor="#000"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="1dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_prof"
            android:drawablePadding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="signup"
            android:onClick="btn6"
            android:textColor="#000"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="1dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_prof"
            android:drawablePadding="10dp"/>

    </LinearLayout>

    <Button
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="35dp"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="LOGOUT"
        android:padding="15dp"
        android:text="LOGOUT"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_logout"/>
</LinearLayout>